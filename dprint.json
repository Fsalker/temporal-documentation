{
  "lineWidth": 80,
  "typescript": {
    "quoteStyle": "alwaysSingle"
  },
  "json": {},
  "markdown": {
    "newLineKind": "lf",
    "textWrap": "maintain",
    "emphasisKind": "underscores",
    "strongKind": "asterisks",
    "ignoreDirective": "dprint-ignore",
    "ignoreFileDirective": "dprint-ignore-file",
    "ignoreStartDirective": "dprint-ignore-start",
    "ignoreEndDirective": "dprint-ignore-end"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "blog/**",
    ".docusaurus/",
    ".github",
    "/build",
    "sidebars.js"
  ],
  "incremental": false,
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.68.0.wasm",
    "https://plugins.dprint.dev/json-0.15.1.wasm",
    "https://plugins.dprint.dev/markdown-0.13.1.wasm",
    "https://plugins.dprint.dev/prettier-0.7.0.json@4e846f43b32981258cef5095b3d732522947592e090ef52333801f9d6e8adb33"
  ]
}
